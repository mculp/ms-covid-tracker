<div class="container">
  <table class="table table-bordered table-hover sortable-theme-bootstrap" data-sortable>
    <caption style="caption-side: top">Updated <%= updated %></caption>
    <thead>
      <tr>
        <th>County</th>
        <th>Total Cases</th>
        <th id="new-cases-header" data-sorted="true" data-sorted-direction="descending">New Cases</th>
        <th>Total Deaths</th>
        <th>New Deaths</th>
      </tr>
    </thead>

    <tbody>
    <% counties.each do |county| %>
      <tr>
        <td>
          <a href="/counties/<%= county.name %>">
            <%= county.name %>
          </a>
        </td>
        <td><%= county.county_updates.first.cases %></td>
        <td><%= county.county_updates.first.new_cases %></td>
        <td><%= county.county_updates.first.deaths %></td>
        <td><%= county.county_updates.first.new_deaths %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
