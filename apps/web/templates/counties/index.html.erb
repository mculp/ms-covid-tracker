<div class="container">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td>County</td>
        <td>Total Cases</td>
        <td>New Cases</td>
        <td>Total Deaths</td>
        <td>New Deaths</td>
      </tr>
    </thead>

    <tbody>
    <% counties.each do |county| %>
      <tr>
        <td>
          <a href="/counties/<%= county.name %>">
            <%= county.name %>
          </a>
        </td>
        <td><%= county.county_updates.first.cases %></td>
        <td><%= county.county_updates.first.cases - county.county_updates.first.previous_update.cases %></td>
        <td><%= county.county_updates.first.deaths %></td>
        <td><%= county.county_updates.first.deaths - county.county_updates.first.previous_update.deaths %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
