<div class="container">
  <table class="table table-bordered table-hover sortable-theme-bootstrap" data-sortable>
    <caption style="caption-side: top">Updated <%= updated %></caption>
    <thead>
      <tr>
        <th>County</th>
        <th>Total Cases</th>
        <th id="new-cases-header" data-sorted="true" data-sorted-direction="descending">New Cases</th>
        <th>Total Deaths</th>
        <th>New Deaths</th>
      </tr>
    </thead>

    <tbody>
    <% counties.each do |county| %>
      <tr>
        <td>
          <a href="/counties/<%= county.county_name %>" class="h6-no-bold">
            <%= county.county_name %>
          </a>
        </td>
        <td class="h6-no-bold"><%= county.cases %></td>
        <td>
          <h6><%= county.new_cases %></h6>
          <span class="badge <%= badge_class(county.percent_change) %>">
            <%= county.percent_change %>%
          </span>
        </td>
        <td class="h6-no-bold"><%= county.deaths %></td>
        <td><h6><%= county.new_deaths %><h6></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
