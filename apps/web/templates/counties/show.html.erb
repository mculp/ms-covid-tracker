<div class="container">
  <h1><%= county.name %></h1>
  <table class="table table-bordered table-hover sortable-theme-bootstrap" data-sortable>
    <thead>
      <tr>
        <th>Date</th>
        <th>Total Cases</th>
        <th>New Cases</th>
        <th>Total Deaths</th>
        <th>New Deaths</th>
      </tr>
    </thead>

    <tbody>
    <% county.county_updates.each_with_index do |county_update, index| %>
      <tr>
        <td><%= county_update.date.to_date %></td>
        <td><%= county_update.cases %></td>
        <td><%= county_update.new_cases || 'N/A' %></td>
        <td><%= county_update.deaths %></td>
        <td><%= county_update.new_deaths || 'N/A' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
